<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/btn_add"
    tools:targetApi="kitkat"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_longAnimTime"
    >
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_add"></solid>
            <stroke android:color="@color/black" android:width="1dp"></stroke>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>

</selector>