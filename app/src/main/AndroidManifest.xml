<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.grsu.budgetplanner">

    <application
        android:name=".model.database.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.BudgetPlanner">
        <activity android:name=".activities.AddTransactionActivity"
            android:label="@string/add_transaction_label"
        ></activity>
        <activity android:name=".activities.AddWalletActivity"
            android:label="@string/add_wallet_label"
        />
        <activity android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>